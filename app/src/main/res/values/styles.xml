<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="NumberButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/button_margin</item>
        <item name="android:layout_marginRight">@dimen/button_margin</item>
        <item name="android:layout_weight">@integer/weight_operation</item>
        <item name="android:backgroundTint">@color/btn_number</item>
        <item name="android:textSize">@dimen/button_size_number</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="NumberButtonStyle.Operation">
        <item name="android:backgroundTint">@color/btn_function</item>
    </style>
    <style name="NumberButtonStyle.Functional">
        <item name="android:layout_height">@dimen/button_text_height</item>
        <item name="android:backgroundTint">@color/btn_function</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:textStyle">normal</item>
    </style>
    <style name="NumberButtonStyle.Functional.Clear" parent="NumberButtonStyle.Functional">
        <item name="android:backgroundTint">@color/btn_red_clear</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="ButtonsRowTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/margin_row</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <style name="ButtonsRowTitle.Number">
        <item name="android:layout_marginTop">@dimen/margin_row</item>
    </style>
</resources>